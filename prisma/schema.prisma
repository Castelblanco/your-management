generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String      @id @unique
  first_name    String
  last_name     String
  document_id   String
  email         String
  phone         String
  address       String
  point_sale_id String
  created_at    DateTime    @default(now())
  updated_at    DateTime    @default(now())
  role_id       String
  point_sale    Point_Sales @relation(fields: [point_sale_id], references: [id])
  role          Users_Roles @relation(fields: [role_id], references: [id])
}

model Point_Sales {
  id        String      @id @unique
  name      String
  address   String
  budget    String
  status_id String
  city_id   String
  city      Cities      @relation(fields: [city_id], references: [id])
  status    Status_Code @relation(fields: [status_id], references: [id])
  users     Users[]
}

model Department {
  id        String      @id @unique
  name      String
  status_id String
  cities    Cities[]
  status    Status_Code @relation(fields: [status_id], references: [id])
}

model Status_Code {
  id          String        @id @unique
  name        String
  Cities      Cities[]
  department  Department[]
  point_sales Point_Sales[]
}

model Users_Roles {
  id    String  @id @unique
  name  String
  users Users[]
}

model Cities {
  id            String        @id @unique
  name          String
  department_id String
  status_id     String
  department    Department    @relation(fields: [department_id], references: [id])
  status        Status_Code   @relation(fields: [status_id], references: [id])
  point_sales   Point_Sales[]
}
